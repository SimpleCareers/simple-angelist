fa-surface(class="{{'jobcard'+(card.index-curIdx)}}", fa-pipe-to="swipePipe", fa-size="[true,true]")
  .card-background
    div
      img.card-logo(ng-src="{{card.startup.thumb_url}}")
    .card-title-grad
    .card-title
      | {{card.title}}
    .card-subtitle
      | {{card.startup.name}} 
      span(ng-if="card.location")
        | â€¢ {{card.location}}
    div.card-hero-wrapper
      //- img.card-hero(ng-repeat="screenshot in card.startup.screenshots", ng-src="{{screenshot.thumb}}")
      img.card-hero(ng-src="{{card.screenshot}}")
      //- img.card-hero(ng-src="{{card.startup.logo_url}}")
      //- img.card-hero(ng-src="{{card.startup.logo_url}}")
      //- img.card-hero(ng-src="{{card.startup.logo_url}}")
      //- img.card-hero(ng-src="{{card.startup.logo_url}}")
    .card-desc-wrap
      .card-desc
        | {{card.description || card.startup.product_desc}}
      .hline
      .card-detail-2
        ul
          li.list-item
            | {{card.job_type.capitalize()}}
          li.list-item
            | ${{(card.salary_min/1000|| 0) | number}}K - ${{(card.salary_max/1000|| 0) | number}}K
          li.list-item
            | {{card.startup.company_size}} empl.
          li.list-item
            | {{(card.equity_min || 0) | number:1}}% - {{(card.equity_max || 0) | number:1}}%
fa-modifier#passMod
  fa-surface(class="{{'jobcard'+(card.index-curIdx)}}", fa-pipe-to="swipePipe", fa-size="[true,true]")
    .card-overlay-wrapper
      .card-overlay-pass
      .card-overlay-text-wrapper 
        span.card-overlay-text PASS
fa-modifier#favMod
  fa-surface(class="{{'jobcard'+(card.index-curIdx)}}", fa-pipe-to="swipePipe", fa-size="[true,true]", fa-origin="[0.5,0.5]", fa-align="[0.5,0.5]")
    .card-overlay-wrapper
      .card-overlay-fav
      .card-overlay-text-wrapper 
        span.card-overlay-text LIKE
fa-animation(timeline="scrollPositionFav")
  animate(targetmodselector="#favMod", field="opacity", startvalue="0", endvalue="1")
fa-animation(timeline="scrollPositionPass")
  animate(targetmodselector="#passMod", field="opacity", startvalue="0", endvalue="1")
